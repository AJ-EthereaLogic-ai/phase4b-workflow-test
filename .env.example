# Phase4B Test Project - Environment Variables
# Copy this file to .env and fill in your actual values

# Author Information
ENGINEER_NAME=Your Name

# API Keys for LLM Providers
ANTHROPIC_API_KEY=sk-ant-...
OPENROUTER_API_KEY=

# ADWS Configuration
ADWS_STATE_DB_PATH=.adws/state/workflows.db
ADWS_EVENTS_PATH=.adws/events/events.jsonl
ADWS_CONFIG_PATH=adws.toml

# Production Deployment Configuration
ADWS_LOG_LEVEL=INFO
ADWS_METRICS_ENABLED=true
ADWS_HEALTH_CHECKS_ENABLED=true

# Deployment Settings
DEPLOYMENT_ENV=development
ROLLBACK_ON_FAILURE=true

# Docker Configuration
DOCKER_REGISTRY=localhost:5000
DOCKER_IMAGE_NAME=phase4b_test
API_PORT=8000
# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=changeme
PROMETHEUS_RETENTION_DAYS=15d

# Kubernetes Configuration
K8S_NAMESPACE=phase4b_test
K8S_DEPLOYMENT_NAME=phase4b_test
K8S_SERVICE_NAME=phase4b_test
K8S_INGRESS_HOST=phase4b_test.local
K8S_MIN_REPLICAS=2
K8S_MAX_REPLICAS=10
K8S_CPU_LIMIT=500m
K8S_MEMORY_LIMIT=512Mi
K8S_CPU_REQUEST=250m
K8S_MEMORY_REQUEST=256Mi
K8S_STORAGE_SIZE=1Gi

# Deployment Script Configuration
HEALTH_CHECK_RETRIES=30
HEALTH_CHECK_INTERVAL=10
DOCKER_IMAGE_TAG=latest

# Git Repository
GIT_REPOSITORY=phase4b_test

# Claude Code Configuration
CLAUDE_CODE_PATH=claude
CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR=true
