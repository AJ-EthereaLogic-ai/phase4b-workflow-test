{
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["@testing-library/jest-dom"],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{ts,tsx}",
      "!src/**/*.spec.{ts,tsx}"
    ],
    "coverageThresholds": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "vitest": {
    "environment": "jsdom",
    "globals": true,
    "setupFiles": ["./src/test/setup.ts"],
    "coverage": {
      "provider": "v8",
      "reporter": ["text", "json", "html"],
      "exclude": [
        "**/*.test.{ts,tsx}",
        "**/*.spec.{ts,tsx}",
        "**/node_modules/**"
      ],
      "thresholds": {
        "lines": 80,
        "functions": 80,
        "branches": 80,
        "statements": 80
      }
    }
  },
  "playwright": {
    "testDir": "./tests/e2e",
    "fullyParallel": true,
    "forbidOnly": true,
    "retries": 2,
    "workers": 4,
    "reporter": "html",
    "use": {
      "baseURL": "http://localhost:3000",
      "trace": "on-first-retry",
      "screenshot": "only-on-failure"
    },
    "projects": [
      {
        "name": "chromium",
        "use": {
          "browserName": "chromium"
        }
      },
      {
        "name": "firefox",
        "use": {
          "browserName": "firefox"
        }
      },
      {
        "name": "webkit",
        "use": {
          "browserName": "webkit"
        }
      }
    ]
  }
}
